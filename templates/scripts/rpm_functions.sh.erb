: ${WORKDIR:=`pwd`}

get_rpmbuild() {
    local RPMBUILD dist setarch

    dist=`rpm -E '%{?dist}' | sed 's/\(\.centos\)\?$/.icinga/'`
    if [ -n "$target_arch" ]; then
      setarch="setarch ${target_arch}"
    else
      setarch=''
    fi
    ${setarch} /usr/bin/rpmbuild \
        --define "vendor Icinga.com" \
        --define "dist $dist" \
        --define "_topdir ${WORKDIR}/rpmbuild" \
        "$@"
    )
    declare -p RPMBUILD
}

rpmbuild() {
    local RPMBUILD
    eval "$(get_rpmbuild "$@")"
    "${RPMBUILD[@]}"
}
