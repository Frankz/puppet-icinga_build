: ${WORKDIR:=`pwd`}

rpmbuild() {
    dist=`rpm -E %dist | sed 's/\(\.centos\)\?$/.icinga/'`
    /usr/bin/rpmbuild \
        --define "vendor Icinga.com" \
        --define "dist $dist" \
        --define "_topdir ${WORKDIR}/rpmbuild" \
    "$@"
        #--define "_rpmdir %{_topdir}/RPMS" \
        #--define "_srcrpmdir %{_topdir}/SRPMS" \
}
